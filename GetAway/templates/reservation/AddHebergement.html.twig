{% extends 'base_front.html.twig ' %}
{% block content %}

    <main id="main">

        <div class="inner-main common-spacing container">
            <div class="form-control-color" >
                {% for message in  app.flashes('warning')%}
                    <div class="top-box" >

                        <div class="alert alert-danger" role="alert">{{ message }}</div>


                    </div>

                {% endfor %}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-holder">
                        <h1 class="small-size">Create Reservation </h1>
                        <div class="wrap">
                            {{ form_start(form) }}
                            <div class="col-md-6">
                                <div class="hold">
                                    {{ form_label(form.dateDebut) }}
                                    {{ form_widget(form.dateDebut  ,{ 'attr': {'class': 'input-group date'}}) }}
                                    {{ form_errors(form.dateDebut) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="hold">
                                    {{ form_label(form.dateFin) }}
                                    {{ form_widget(form.dateFin  ,{ 'attr': {'class': 'input-group date'}}) }}
                                    {{ form_errors(form.dateFin) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="hold">
                                    {{ form_label(form.idClient) }}

                                    {{ form_widget(form.idClient,{ 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <br>
                            <div class="col-md-6">
                                <div class="hold">{{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-default'}} )}}
                                </div>
                            </div>
                            <br>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </main>
{% endblock %}

