                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.etat }}</td>
                <td>{{ reservation.type }}</td>
                <td>
                    <a class="btn btn-primary me-2" href="{{ path('detailsR', {'id': reservation.id}) }}"> Afficher paiement  </a>
<a class="btn btn-primary me-2"  href="{{ path('app_reservation_delete', {'id': reservation.id}) }}"> Delete</a>
</td>
            </tr>
        {% else %}
            <tr class="table-warning">
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</body>
          </div>
{% endblock %}
