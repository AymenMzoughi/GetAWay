{% extends 'base_back.html.twig' %}

      {% block content %}
<body>
<div class="table-responsive pt-3">
    <table class="table table-bordered table-striped">
        <tbody>

        <thead>
            <tr class="table-info" >
                <th>Id</th>
                <th>DateReservation</th>
                <th>NbrPlace</th>
