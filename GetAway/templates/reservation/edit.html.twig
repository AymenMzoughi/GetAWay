{% extends 'base_front.html.twig' %}




{% block  content  %}
    <main id="main">
        <div class="inner-main common-spacing container">
            <div class="form-control" >
                {% for message in  app.flashes('warning')%}
                <div class="top-box" >
                    <div class="alert alert-danger" role="alert">{{ message }}</div>
                </div>
            </div>
            {% endfor %}
            <div class="row">
                <div class="form-holder">

                    <div class="wrap">
                        {{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
                        <form>
                            <h1 class="small-size ">Create Reservation </h1>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.dateReservation) }}
                                    {{ form_widget(form.dateReservation , {'attr': {'class': 'input-group date' }} ) }}

                                </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.dateDebut) }}
                            {{ form_widget(form.dateDebut , {'attr': {'class': 'input-group date' }} ) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.dateFin) }}
                            {{ form_widget(form.dateFin, {'attr': {'class': 'input-group date' }}) }}

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="hold">
                            {{ form_label(form.nbrPlace) }}
                            {{ form_widget(form.nbrPlace,{ 'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                            <div class="col-md-6">
                                <div class="hold">
                                    {{ form_label(form.etat) }}
                                    {{ form_widget(form.etat,{ 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                    <div class="col-md-6">
                        <div class="hold">
                            {{ form_widget(form.Modifier, { 'attr': {'class': 'btn btn-default'}} )}}
                        </div>
                    </div>


                    {{ form_end(form) }}
                    </form>

                </div>
            </div>
        </div>



    </main>


{% endblock %}
