{% extends 'base_front.html.twig ' %}

{% block content %}

    <main id="main">

        <div class="inner-main common-spacing container">

                    <div class="form-control-color" >
                        <h1 class="small-size">Create new Reservation </h1>
                        {% for message in  app.flashes('warning')%}
                            <div class="top-box" >

                                <div class="alert alert-danger" role="alert">{{ message }}</div>


                            </div>

                        {% endfor %}
                        <div class="wrap">

                            {{ form_start(form) }}
                            <div class="form-group">
                                <div class="hold">

                                    {{ form_label(form.nbrPlace)}}
                                    {{ form_widget(form.nbrPlace,{ 'attr': {'class': 'form-control'}}) }}
                                    <div>
                                    <p class="card-description"> <code> {{ form_errors(form.nbrPlace) }} </code> </p>
                                </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="hold">
                                    {{ form_label(form.idClient) }}

                                    {{ form_widget(form.idClient,{ 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="hold">
                                    {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-default'}} )}}
                                </div>
                            </div>

                            {{ form_end(form) }}
                        </div>
                        </div>
                    </div>






    </main>
{% endblock %}
