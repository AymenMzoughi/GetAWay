{% extends 'base_front.html.twig' %}


{% block title %}Activite index{% endblock %}

{% block content %}
<div class="inner-main common-spacing container">
    <div class="bg-light p-3">
    </div>

    <div class="row">

    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Refact</th>
                <th>Nom</th>
                <th>Descrip</th>
                <th>Duree</th>
                <th>Nbrplace</th>
                <th>Date</th>
                <th>Type</th>
                <th>Location</th>
                <th>Reservation</th>

            </tr>
            </thead>
            <tbody>
            {% for activite in activites %}
                <tr>

                    <td>{{ activite.nom }}</td>
                    <td>{{ activite.descrip }}</td>
                    <td>{{ activite.duree }}</td>
                    <td>{{ activite.nbrplace }}</td>
                    <td>{{ activite.date }}</td>
                    <td>{{ activite.type }}</td>
                    <td>{{ activite.location }}</td>
                    <td>{{ activite.prix }}</td>
                    <td>
                        <a href="{{ path('cart_add',{'id':activite.refact}) }}" class="btn btn-success float-right">
                            <i class="fas fa-shopping-cart mr-1"></i>
                            Ajouter
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
</div>
    <a href="{{ path('app_activite_new') }}">Create new</a>
{% endblock %}
