{% extends 'base_front.html.twig' %}

{% block content %}
    <main id="main">
        <div class="inner-top">
            <div class="container">
                <h1 class="inner-main-heading"> Details de Paiement  </h1>
            </div>
        </div>
        <div class="inner-main common-spacing container">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">

                            <tbody>
                            <tr>
                                {{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
                                <th>ModalitePaiement</th>
                                <td>
                                    {{ form_widget(form.modalitePaiement,{ 'attr': {'class': 'form-control'}} ) }}
                                </td>

                            </tr>
                            <tr>
                                <th>Montant</th>
                                <td>{{ paiement.montant }} dt </td>
                            </tr>
                            <tr>
                                <th>Date</th>
                                <td>{{ paiement.date ? paiement.date|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Type Reservation</th>
                                <td>{{ paiement.idReservation.type}}</td>
                            </tr>
                            <tr>
                                <td>   <a href="{{ path('AfficherClient') }}" class="btn btn-default">Retour a la liste </a></td>
                                <td>  {{ form_widget(form.Modifier, { 'attr': {'class': 'btn btn-default'}} )}}</td>
                            </tr>
                            </tbody>
                        </table>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>


{% endblock %}
