{% extends 'base_front.html.twig' %}

{% block title %}Avis{% endblock %}

{% block content %}

    <h1>Avis</h1>
    <br>
    <br>
    <br>
    {% for messages in app.flashes('info') %}
        <div class="alert alert-warning">
            {{ messages }}
        </div>
    {% endfor %}
    <table class="table table-striped table-hover data-table">
        <thead>
        <tr>
            <th scope="col">Nom Client</th>
            <th scope="col">Message</th>
            <th scope="col">Date</th>
            <th scope="col">Rating</th>
            <th scope="col">Nom Activite</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td data-label="Rating">{{ avi.id.nom }}</td>
            <td data-label="Message">{{ avi.message }}</td>
            <td data-label="Date">{{ avi.date ? avi.date|date('Y-m-d') : '' }}</td>
            <td data-label="Rating">{{ avi.rating }}</td>
            <td data-label="Rating">{{ avi.refactivite.nom }}</td>
            <td> <a href="{{ path('app_avis_edit', {'refavis': avi.refavis}) }}"> <button class="btn btn-md btn-default">Modifier</button></a>
                {{ include('avis/_delete_form.html.twig') }}</td>

        </tr>
        </tbody>
    </table>




{% endblock %}
