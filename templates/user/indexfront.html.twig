{% extends 'base_front.html.twig' %}


{% block content %}

    <main id="main">

    <div class="inner-main common-spacing container">
    <div class="row">
    <div class="col-md-20">
        <div class="top-box">
            <span class="holder height">Votre liste des reclamations </span>
        </div>

            </div>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Objet</th>
                                        <th>Description</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for reclamation in reclamations %}
                                        <tr>
                                        <td>{{ reclamation.objet }}</td>
                                        <td>{{ reclamation.description }}</td>
                                            <td>
                                                <a class="btn btn-primary me-2" href="{{ path('deleterec', {'idr': reclamation.idr}) }}" >Supprimer</a>
                                                <a class="btn btn-primary me-2" href="{{ path('app_reclamation_edit', {'idr': reclamation.idr}) }}" >Modifier</a>
                                            </td>

                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </div>
    </main>

{% endblock %}