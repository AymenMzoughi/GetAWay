{% extends 'base_front.html.twig ' %}

{% block content %}

<main id="main">

    <div class="inner-main common-spacing container">
        <div class="row">
            <div class="col-md-6">

                <div class="form-holder">
                    <h1 class="small-size">Create new Paiement</h1>
                    <div class="wrap">
                        {{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
                        <div class="col-md-6">
                            <div class="hold">
                            {{ form_label(form.montant) }}

                            {{ form_widget(form.montant,{ 'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="hold">
                                {{ form_label(form.modalitePaiement) }}
                                {{ form_widget(form.modalitePaiement,{ 'attr': {'class': 'form-control'}} ) }}
                                <div class="has-error error">
                                {{ form_errors(form.modalitePaiement) }}
                            </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="hold">
                                {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-default'}} )}}
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
                    </div>
                </div>
            </div>



        </main>
{% endblock %}
